		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	 -->
	
	<!-- Common Settings -->
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>
	
	<error-page>
		<location>/error.html</location>
	</error-page>
	
	<welcome-file-list>
		<welcome-file>home.html</welcome-file>
	</welcome-file-list>

</web-app>
