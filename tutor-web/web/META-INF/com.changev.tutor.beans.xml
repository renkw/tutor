<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    	http://www.springframework.org/schema/beans		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    	http://www.springframework.org/schema/context	http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/util		http://www.springframework.org/schema/util/spring-util-3.0.xsd
       ">

	<!-- ####################################### -->
	<!-- ##       COMMON CONFIGURATION        ## -->
	<!-- ####################################### -->
	
	<!-- Timer -->
	<bean id="timer" class="java.util.Timer">
		<constructor-arg type="boolean" value="true" />
	</bean>

	<!-- Startup -->
	<bean id="startup" class="com.changev.tutor.util.TaskRunner"
		p:timer-ref="timer"
		p:period="3600000"
	>
		<property name="task">
			<!-- clean invalid db4o sessions -->
			<bean class="com.changev.tutor.util.Db4oCleanTask" />
		</property>
	</bean>
	
	<!-- Freemarker -->
	<bean class="freemarker.template.Configuration"
		p:defaultEncoding="UTF-8"
		p:tagSyntax="0"
	>
		<property name="objectWrapper">
			<bean class="freemarker.template.DefaultObjectWrapper" />
		</property>
	</bean>
	
	<!-- UserFileManager -->
	<bean class="com.changev.tutor.web.util.DefaultUserFileManager" />
	
	<!-- Gson -->
	<bean class="com.google.gson.Gson" />
	
	<!-- NavigationNode -->
	<bean class="com.changev.tutor.web.util.NavigationNode"
		p:linkUrl="/home.html"
		p:label="主页"
		p:description="主页"
	>
		<property name="childNodes">
		<util:list>
			<bean class="com.changev.tutor.web.util.NavigationNode"
				p:linkUrl="/front/login.html"
				p:label="用户登录"
				p:description="用户登录"
			/>
			<bean class="com.changev.tutor.web.util.NavigationNode"
				p:linkUrl="/front/register.html"
				p:label="用户注册"
				p:description="用户注册"
			/>
			<bean class="com.changev.tutor.web.util.NavigationNode"
				p:linkUrl="/back/login.html"
				p:label="用户登录"
				p:description="用户登录"
			/>
			<bean class="com.changev.tutor.web.util.NavigationNode"
				p:linkUrl="/back/register.html"
				p:label="用户注册"
				p:description="用户注册"
			/>
			<bean class="com.changev.tutor.web.util.NavigationNode"
				p:linkUrl="/back/member.html"
				p:label="我的主页"
				p:description="我的主页"
			>
				<property name="childNodes">
				<util:list>
					<bean class="com.changev.tutor.web.util.NavigationNode"
						p:linkUrl="/back/questionList.html"
						p:label="提问列表"
						p:description="提问列表"
					>
						<property name="childNodes">
						<util:list>
							<bean class="com.changev.tutor.web.util.NavigationNode"
								p:linkUrl="/back/questionDetail.html"
								p:label="解答提问"
								p:description="解答提问"
							/>
						</util:list>
						</property>
					</bean>
				</util:list>
				</property>
			</bean>
		</util:list>
		</property>
	</bean>

	<!-- ####################################### -->
	<!-- ##     APPLICATION CONFIGURATION     ## -->
	<!-- ####################################### -->
	
	<!-- Views -->
	<bean id="front.sampleView" class="com.changev.tutor.web.front.SampleView" />
	
	<bean id="front.registerView" class="com.changev.tutor.web.front.RegisterView"
		p:successPage="/front/login.html"
	/>
	
	<bean id="front.loginView" class="com.changev.tutor.web.front.LoginView"
		p:successPage="/front/sample.html"
	/>
	
	<bean id="manage.dataView" class="com.changev.tutor.web.manage.DataView" />

	<!-- Services -->
	<bean id="app.testService" class="com.changev.tutor.web.service.TestService" />

</beans>