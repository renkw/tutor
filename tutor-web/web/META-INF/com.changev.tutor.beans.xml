<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    	http://www.springframework.org/schema/beans		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    	http://www.springframework.org/schema/context	http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/util		http://www.springframework.org/schema/util/spring-util-3.0.xsd
       ">

	<!-- ####################################### -->
	<!-- ##       COMMON CONFIGURATION        ## -->
	<!-- ####################################### -->
	
	<!-- Timer -->
	<bean id="timer" class="java.util.Timer">
		<constructor-arg type="boolean" value="true" />
	</bean>

	<!-- Startup -->
	<bean id="startup" class="com.changev.tutor.util.TaskRunner"
		p:timer-ref="timer"
		p:period="3600000"
	>
	</bean>
	
	<!-- Freemarker -->
	<bean class="freemarker.template.Configuration"
		p:defaultEncoding="UTF-8"
		p:tagSyntax="0"
	>
		<property name="objectWrapper">
			<bean class="freemarker.template.DefaultObjectWrapper" />
		</property>
	</bean>
	
	<!-- UserFileManager -->
	<bean class="com.changev.tutor.web.util.DefaultUserFileManager" />
	
	<!-- Gson -->
	<bean class="com.google.gson.Gson" />

	<!-- ####################################### -->
	<!-- ##     APPLICATION CONFIGURATION     ## -->
	<!-- ####################################### -->
	
	<!-- Views -->
	<bean id="public.loginView" class="com.changev.tutor.web.pub.LoginView">
		<property name="loginValidator">
			<bean class="com.changev.tutor.web.util.ParamValidators">
				<property name="validators"><util:list>
					<bean class="com.changev.tutor.web.util.ParamValidators">
						<property name="validatorNames" value="required:请输入登录邮箱。;pattern:请输入正确的邮箱地址。" />
						<property name="args"><util:map>
							<entry key="name" value="email" />
							<entry key="pattern" value="[^@\s]+@\S+" />
						</util:map></property>
					</bean>
					<bean class="com.changev.tutor.web.util.ParamRequiredValidator"
						p:name="password"
						p:message="请输入登录密码。"
					/>
					<bean class="com.changev.tutor.web.util.ParamCheckCodeValidator"
						p:name="checkCode"
						p:message="验证码不正确。"
					/>
				</util:list></property>
			</bean>
		</property>
		<property name="failMessage" value="用户不存在或密码错误。" />
		<property name="successPages"><util:map>
			<entry key="Parent" value="/front/member.html" />
			<entry key="Student" value="/front/member.html" />
			<entry key="Teacher" value="/back/member.html" />
			<entry key="Organization" value="/back/member.html" />
			<entry key="Admin" value="/manage/member.html" />
		</util:map></property>
	</bean>
	
	<bean id="public.registerView" class="com.changev.tutor.web.pub.RegisterView">
		<property name="registerAccountValidator">
			<bean class="com.changev.tutor.web.util.ParamValidators">
				<property name="validators"><util:list>
					<bean class="com.changev.tutor.web.util.ParamValidators">
						<property name="validatorNames" value="required:请输入登录邮箱。;pattern:请输入正确的邮箱地址。" />
						<property name="args"><util:map>
							<entry key="name" value="email" />
							<entry key="pattern" value="[^@\s]+@\S+" />
						</util:map></property>
					</bean>
					<bean class="com.changev.tutor.web.util.ParamValidators">
						<property name="validatorNames" value="required:请输入登录密码。;equals:登录密码和确认密码不一致。" />
						<property name="args"><util:map>
							<entry key="name" value="password" />
							<entry key="anotherName" value="confirmPassword" />
						</util:map></property>
					</bean>
					<bean class="com.changev.tutor.web.util.ParamCheckCodeValidator"
						p:name="checkCode"
						p:message="验证码不正确。"
					/>
				</util:list></property>
			</bean>
		</property>
		<property name="registerRequiredPage" value="/public/registerComplete.html" />
	</bean>
	
	<bean id="manage.dataView" class="com.changev.tutor.web.manage.DataView" />

	<!-- Services -->

</beans>