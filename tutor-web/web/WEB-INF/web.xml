	<!-- Servlets -->
	<servlet>
		<description>
         Process request action and render the response with freemarker
    	</description>
		<servlet-name>ViewServlet</servlet-name>
		<servlet-class>com.changev.tutor.web.ViewServlet</servlet-class>
		<init-param>
			<param-name>TemplatePath</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>NoCache</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>ContentType</param-name>
			<param-value>text/html; charset=UTF-8</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewServlet</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<description>
		 Run service
		</description>
		<servlet-name>ServiceServlet</servlet-name>
		<servlet-class>com.changev.tutor.web.ServiceServlet</servlet-class>
		<init-param>
			<param-name>publicServices</param-name>
			<param-value>app.login</param-value>
		</init-param>
		<init-param>
			<param-name>expiration</param-name>
			<param-value>300000</param-value>
		</init-param>
		<init-param>
			<param-name>tokenCleanPeriod</param-name>
			<param-value>300000</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServiceServlet</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CheckCodeServlet</servlet-name>
		<servlet-class>com.changev.tutor.web.CheckCodeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckCodeServlet</servlet-name>
		<url-pattern>/check_code/*</url-pattern>
	</servlet-mapping>
	
	<!-- Authentication -->
	<filter>
		<filter-name>FrontAuthFilter</filter-name>
		<filter-class>com.changev.tutor.web.AuthFilter</filter-class>
		<init-param>
			<param-name>userRoles</param-name>
			<param-value>Parent,Student</param-value>
		</init-param>
		<init-param>
			<param-name>loginPagePath</param-name>
			<param-value>/front/login.html</param-value>
		</init-param>
		<init-param>
			<param-name>excludePaths</param-name>
			<param-value>
			 /front/login.html,
			 /front/register.html
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>FrontAuthFilter</filter-name>
		<url-pattern>/front/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	<filter>
		<filter-name>BackAuthFilter</filter-name>
		<filter-class>com.changev.tutor.web.AuthFilter</filter-class>
		<init-param>
			<param-name>userRoles</param-name>
			<param-value>Organization,Teacher</param-value>
		</init-param>
		<init-param>
			<param-name>loginPagePath</param-name>
			<param-value>/back/login.html</param-value>
		</init-param>
		<init-param>
			<param-name>excludePaths</param-name>
			<param-value>/back/login.html</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>BackAuthFilter</filter-name>
		<url-pattern>/back/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	<filter>
		<filter-name>ManageAuthFilter</filter-name>
		<filter-class>com.changev.tutor.web.AuthFilter</filter-class>
		<init-param>
			<param-name>userRoles</param-name>
			<param-value>Admin</param-value>
		</init-param>
		<init-param>
			<param-name>loginPagePath</param-name>
			<param-value>/manage/login.html</param-value>
		</init-param>
		<init-param>
			<param-name>excludePaths</param-name>
			<param-value>/manage/login.html</param-value>
		</init-param>
	</filter>
